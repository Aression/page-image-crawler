{
  "manifest_version": 3,
  "name": "网页连续截图下载器",
  "version": "1.0",
  "description": "将当前网页按当前展示分辨率连续不重叠地截图并打包下载。",
  "permissions": [
    "scripting",
    "downloads",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "开始截图",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}