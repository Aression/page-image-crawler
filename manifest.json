{
  "manifest_version": 3,
  "name": "网页连续截图下载器",
  "version": "1.0",
  "description": "将当前网页按当前展示分辨率连续不重复地截图并打包下载。",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "/jszip.min.js",
        "/content.js"
      ]
    }
  ],
  "icons": {
    "16": "/icons/icon16.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  }
}